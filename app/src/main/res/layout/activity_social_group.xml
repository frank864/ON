<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO OUR SOCIAL MEDIA LINKS"
        android:textColor="#E91E63"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/welcome"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"/>
    <Button
        android:id="@+id/btnWhatapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="WhatApp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="#292828"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWhatapp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Facebook"
        android:padding="20dp"
        android:textColor="#292828"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFacebook"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Instagram"
        android:padding="20dp"
        android:textColor="#292828"
        android:textColorHint="@color/black"

        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInstagram"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="X(Twitter)"
        android:padding="20dp"
        android:textColor="#292828"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />




</RelativeLayout>